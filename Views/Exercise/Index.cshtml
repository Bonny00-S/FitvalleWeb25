@model Dictionary<string, Fitvalle_25.Models.Exercise.Exercise>
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Ejercicios";

    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string search = ViewBag.SearchString ?? "";
}

<div class="card-fitvalle p-8 rounded-2xl shadow-lg border border-[var(--color-primary)]/30 bg-[var(--color-surface)] text-[var(--color-text-primary)] animate__animated animate__fadeIn">

    <!-- 🔹 Encabezado -->
    <div class="flex justify-between items-center mb-8">
        <h2 class="text-3xl font-bold text-[var(--color-primary)] font-[Poppins]">🏋️ Ejercicios registrados</h2>
        <a asp-action="Create"
           class="bg-[var(--color-success)] hover:bg-emerald-600 text-white font-semibold px-5 py-2 rounded-lg shadow transition duration-300 flex items-center gap-2">
            <i class="fa-solid fa-plus"></i> Nuevo
        </a>
    </div>

    <!-- 🔍 Buscador -->
    <form method="get" asp-action="Index" class="mb-8 flex flex-wrap items-center gap-3">
        <div class="relative flex-1 min-w-[250px]">
            <i class="fa-solid fa-magnifying-glass absolute left-3 top-3 text-gray-400"></i>
            <input type="text" name="searchString" value="@search"
                   placeholder="Buscar por nombre, músculo o tipo..."
                   class="w-full bg-[var(--color-background)] border border-[var(--color-primary)]/30 rounded-lg px-4 py-2 pl-10 text-[var(--color-text-primary)] focus:ring-2 focus:ring-[var(--color-primary)] focus:outline-none transition" />
        </div>
        <button type="submit"
                class="bg-[var(--color-primary)] hover:bg-[var(--color-primary-hover)] text-white font-semibold px-6 py-2 rounded-lg shadow transition duration-300">
            Buscar
        </button>
    </form>

    <!-- 🧩 Tabla -->
    <div class="overflow-x-auto rounded-xl border border-[var(--color-primary)]/30 shadow-lg">
        <table class="w-full text-sm text-left font-[Poppins]">
            <thead class="bg-[var(--color-primary)] text-white uppercase tracking-wide text-xs">
                <tr>
                    <th class="px-4 py-3">Video</th>
                    <th class="px-4 py-3">Nombre</th>
                    <th class="px-4 py-3">Descripción</th>
                    <th class="px-4 py-3">Músculo</th>
                    <th class="px-4 py-3">Tipo</th>
                    <th class="px-4 py-3">Registro</th>
                    <th class="px-4 py-3 text-center">Acciones</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-[var(--color-primary)]/20 bg-[var(--color-background)] text-[var(--color-text-secondary)]">
                @if (Model != null && Model.Any())
                {
                    foreach (var ex in Model)
                    {
                        <tr class="hover:bg-[var(--color-primary-hover)]/10 transition duration-300">
                            <td class="px-4 py-3">
                                @if (!string.IsNullOrEmpty(ex.Value.ImageUrl))
                                {
                                    <video autoplay loop muted playsinline class="w-16 h-16 object-cover rounded-md border border-[var(--color-primary)]/20 shadow-md">
                                        <source src="@ex.Value.ImageUrl" type="video/mp4">
                                    </video>
                                }
                                else
                                {
                                    <span class="text-gray-400 text-sm italic">Sin video</span>
                                }
                            </td>
                            <td class="px-4 py-3 font-semibold text-[var(--color-text-primary)]">@ex.Value.Name</td>
                            <td class="px-4 py-3">@ex.Value.Description</td>
                            <td class="px-4 py-3">@ex.Value.Muscle?.Name</td>
                            <td class="px-4 py-3">@ex.Value.Type?.Name</td>
                            <td class="px-4 py-3">@ex.Value.RegisterDate.ToString("dd/MM/yyyy")</td>
                            <td class="px-4 py-3 text-center space-x-2">
                                <a asp-action="Edit" asp-route-id="@ex.Value.Id"
                                   class="inline-flex items-center gap-1 bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded-md text-xs font-semibold shadow transition duration-300">
                                    <i class="fa-solid fa-pen-to-square"></i> Editar
                                </a>
                                <button type="button"
                                        onclick="openDeleteModal('@ex.Value.Id')"
                                        class="inline-flex items-center gap-1 bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded-md text-xs font-semibold shadow transition duration-300">
                                    <i class="fa-solid fa-trash"></i> Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="text-center py-6 text-[var(--color-text-secondary)] italic">
                            No hay ejercicios registrados.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- 📄 PAGINACIÓN -->
    @if (totalPages > 1)
    {
        <div class="flex justify-center items-center mt-8 gap-2">
            @if (currentPage > 1)
            {
                <a asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-searchString="@search"
                   class="px-3 py-1 bg-gray-700 hover:bg-gray-600 text-white rounded-md shadow transition">⬅</a>
            }

            @for (int i = 1; i <= totalPages; i++)
            {
                <a asp-action="Index" asp-route-page="@i" asp-route-searchString="@search"
                   class="px-3 py-1 rounded-md font-semibold shadow transition
                                  @(i == currentPage
                                               ? "bg-[var(--color-primary)] text-white"
                                               : "bg-[var(--color-background)] border border-[var(--color-primary)]/30 text-[var(--color-text-secondary)] hover:bg-[var(--color-primary-hover)]/30")">
            @i
        </a>
                }

            @if (currentPage < totalPages)
            {
                <a asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-searchString="@search"
                   class="px-3 py-1 bg-gray-700 hover:bg-gray-600 text-white rounded-md shadow transition">➡</a>
            }
        </div>
    }
</div>

<!-- 🔺 Modal de confirmación -->
<div id="deleteModal" class="fixed inset-0 bg-black/70 flex items-center justify-center hidden z-50">
    <div class="bg-[var(--color-surface)] rounded-xl shadow-2xl border border-[var(--color-primary)]/30 p-8 w-[24rem] animate__animated animate__fadeIn">
        <h3 class="text-xl font-bold text-[var(--color-primary)] mb-3">⚠️ Confirmar eliminación</h3>
        <p class="text-[var(--color-text-secondary)] mb-6 text-sm">
            ¿Estás seguro de que deseas eliminar este ejercicio? Esta acción no se puede deshacer.
        </p>

        <form id="deleteForm" method="post" asp-action="Delete">
            <input type="hidden" name="id" id="deleteId" />
            <div class="flex justify-end space-x-3">
                <button type="button" onclick="closeDeleteModal()"
                        class="px-4 py-2 bg-gray-700 hover:bg-gray-600 text-white rounded-md font-semibold transition">
                    Cancelar
                </button>
                <button type="submit"
                        class="px-4 py-2 bg-red-700 hover:bg-red-800 text-white rounded-md font-semibold shadow">
                    Eliminar
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function openDeleteModal(id) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteModal').classList.remove('hidden');
    }
    function closeDeleteModal() {
        document.getElementById('deleteModal').classList.add('hidden');
    }
</script>
