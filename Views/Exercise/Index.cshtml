@model Dictionary<string, Fitvalle_25.Models.Exercise.Exercise>
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Ejercicios";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
    string search = ViewBag.SearchString ?? "";
}

<div class="p-6 bg-white rounded-xl shadow-md animate__animated animate__fadeIn text-black">
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-bold text-gray-800">Ejercicios</h2>
        <a asp-action="Create"
           class="bg-green-600 hover:bg-green-700 text-white font-semibold px-4 py-2 rounded-lg shadow transition duration-300">
            ➕ Nuevo Ejercicio
        </a>
    </div>

    <!-- 🔍 Buscador -->
    <form method="get" asp-action="Index" class="mb-6 flex items-center gap-2">
        <input type="text" name="searchString" value="@search"
               placeholder="Buscar por nombre, músculo o tipo..."
               class="w-full md:w-1/3 border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#a10d3a] focus:outline-none" />
        <button type="submit"
                class="bg-[#a10d3a] hover:bg-[#870a2f] text-white font-semibold px-4 py-2 rounded-lg shadow transition duration-300">
            🔍 Buscar
        </button>
    </form>

    <!-- 🧩 Tabla -->
    <div class="overflow-x-auto">
        <table class="w-full border-collapse rounded-lg overflow-hidden shadow-md">
            <thead class="bg-[#a10d3a] text-white">
                <tr>
                    <th class="px-4 py-2 text-left">Imagen</th>
                    <th class="px-4 py-2 text-left">Nombre</th>
                    <th class="px-4 py-2 text-left">Descripción</th>
                    <th class="px-4 py-2 text-left">Músculo</th>
                    <th class="px-4 py-2 text-left">Tipo</th>
                    <th class="px-4 py-2 text-left">Fecha Registro</th>
                    <th class="px-4 py-2 text-center">Acciones</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @if (Model != null && Model.Any())
                {
                    foreach (var ex in Model)
                    {
                        <tr class="hover:bg-gray-100 transition duration-200 animate__animated animate__fadeInUp">
                            <td class="px-4 py-2">
                                @if (!string.IsNullOrEmpty(ex.Value.ImageUrl))
                                {
                                    <video autoplay loop muted playsinline class="w-16 h-16 object-cover rounded-lg shadow">
                                        <source src="@ex.Value.ImageUrl" type="video/mp4">
                                    </video>
                                }
                                else
                                {
                                    <span class="text-gray-400 text-sm">Sin imagen</span>
                                }
                            </td>
                            <td class="px-4 py-2 font-semibold">@ex.Value.Name</td>
                            <td class="px-4 py-2">@ex.Value.Description</td>
                            <td class="px-4 py-2">@ex.Value.Muscle?.Name</td>
                            <td class="px-4 py-2">@ex.Value.Type?.Name</td>
                            <td class="px-4 py-2">@ex.Value.RegisterDate.ToString("dd/MM/yyyy")</td>
                            <td class="px-4 py-2 text-center space-x-2">
                                <a asp-action="Edit" asp-route-id="@ex.Value.Id"
                                   class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded-md text-sm shadow transition duration-300">
                                    ✏️ Editar
                                </a>
                                <button type="button" onclick="openDeleteModal('@ex.Value.Id')"
                                        class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded-md text-sm shadow transition duration-300">
                                    🗑️ Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="px-4 py-4 text-center text-gray-500">No hay ejercicios registrados.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- 📄 PAGINACIÓN -->
    @if (totalPages > 1)
    {
        <div class="flex justify-center items-center mt-6 gap-2">
            @if (currentPage > 1)
            {
                <a asp-action="Index" asp-route-page="@(currentPage - 1)" asp-route-searchString="@search"
                   class="px-3 py-1 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg">⬅ Anterior</a>
            }

            @for (int i = 1; i <= totalPages; i++)
            {
                <a asp-action="Index" asp-route-page="@i" asp-route-searchString="@search"
                   class="px-3 py-1 rounded-lg @(i == currentPage ? "bg-[#a10d3a] text-white" : "bg-gray-200 hover:bg-gray-300")">
                    @i
                </a>
            }

            @if (currentPage < totalPages)
            {
                <a asp-action="Index" asp-route-page="@(currentPage + 1)" asp-route-searchString="@search"
                   class="px-3 py-1 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg">Siguiente ➡</a>
            }
        </div>
    }
</div>

<!-- 🔺 Modal de confirmación -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-xl shadow-lg p-6 w-96 animate__animated animate__fadeIn">
        <h3 class="text-lg font-bold text-gray-800 mb-4">¿Eliminar ejercicio?</h3>
        <p class="text-gray-600 mb-6">Esta acción no se puede deshacer.</p>

        <form id="deleteForm" method="post" asp-action="Delete">
            <input type="hidden" name="id" id="deleteId" />
            <div class="flex justify-end space-x-3">
                <button type="button" onclick="closeDeleteModal()"
                        class="px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg shadow">
                    Cancelar
                </button>
                <button type="submit"
                        class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg shadow">
                    Confirmar
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function openDeleteModal(id) {
        document.getElementById('deleteId').value = id;
        document.getElementById('deleteModal').classList.remove('hidden');
    }
    function closeDeleteModal() {
        document.getElementById('deleteModal').classList.add('hidden');
    }
</script>
