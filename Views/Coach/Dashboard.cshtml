@{
    Layout = "~/Views/Shared/_LayoutCoach.cshtml";
    ViewData["Title"] = "Inicio";
    var fecha = DateTime.Now.ToString("dd/MM/yyyy");
    var anio = DateTime.Now.Year;
}

<div class="card-fitvalle text-center animate__animated animate__fadeIn">
    <h1 class="text-3xl font-bold mb-3 text-[var(--color-text-primary)]">
        👋 Bienvenido <span class="text-[var(--color-primary)]">Coach</span>
    </h1>

    <p class="text-xl font-semibold mb-4 text-[var(--color-text-secondary)]">
        Plataforma <span class="text-[var(--color-primary)] font-[Poppins]">Fitvalle</span>
    </p>

    <div class="bg-[var(--color-background)] border border-[var(--color-primary)]/20 rounded-lg p-4 inline-block">
        <p class="text-lg mb-1">
            📅 Fecha actual: <span class="font-bold text-[var(--color-text-primary)]">@fecha</span>
        </p>
        <p class="text-sm text-[var(--color-text-secondary)] mt-1">
            © @anio - Fitvalle
        </p>
    </div>
</div>
