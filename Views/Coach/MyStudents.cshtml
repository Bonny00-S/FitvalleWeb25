@model List<(Fitvalle_25.Models.User user, Fitvalle_25.Models.Customer customer, bool hasRoutine)>

@{
    Layout = "~/Views/Shared/_LayoutCoach.cshtml";
    ViewData["Title"] = "Mis Alumnos";
}

<div class="p-6 card-fitvalle animate__animated animate__fadeIn">
    <h2 class="text-3xl font-bold mb-6 text-[var(--color-text-primary)] font-[Poppins]">
        👨‍🏫 Mis Alumnos
    </h2>

    @if (TempData["Message"] != null)
    {
        <div class="mb-4 bg-[var(--color-success)]/20 text-[var(--color-success)] px-4 py-2 rounded-lg border border-[var(--color-success)]/50">
            @TempData["Message"]
        </div>
    }

    <div class="overflow-x-auto">
        <table class="w-full border-collapse rounded-lg overflow-hidden shadow-md">
            <thead class="bg-[var(--color-primary)] text-white">
                <tr>
                    <th class="px-4 py-3 text-left font-[Poppins]">Nombre</th>
                    <th class="px-4 py-3 text-left font-[Poppins]">Correo</th>
                    <th class="px-4 py-3 text-left font-[Poppins]">Altura (cm)</th>
                    <th class="px-4 py-3 text-left font-[Poppins]">Peso (kg)</th>
                    <th class="px-4 py-3 text-left font-[Poppins]">Meta (kg)</th>
                    <th class="px-4 py-3 text-center font-[Poppins]">Acciones</th>
                </tr>
            </thead>

            <tbody class="bg-[var(--color-surface)] divide-y divide-[var(--color-primary)]/20">
                @if (Model != null && Model.Any())
                {
                    foreach (var s in Model)
                    {
                        <tr class="hover:bg-[var(--color-primary-hover)]/30 transition duration-200">
                            <td class="px-4 py-2 font-semibold text-[var(--color-text-primary)]">@s.user.Name</td>
                            <td class="px-4 py-2 text-[var(--color-text-secondary)]">@s.user.Email</td>
                            <td class="px-4 py-2">@s.customer.Height</td>
                            <td class="px-4 py-2">@s.customer.Weight</td>
                            <td class="px-4 py-2">@s.customer.GoalWeight</td>

                            <td class="px-4 py-2 text-center space-x-2 whitespace-nowrap">
                                @if (!s.hasRoutine)
                                {
                                    <a asp-action="Create" asp-controller="Routine" asp-route-customerId="@s.customer.Id"
                                       class="bg-[var(--color-success)] hover:bg-emerald-600 text-white px-3 py-1 rounded-md text-sm font-[Poppins] shadow transition duration-300">
                                        🏋️ Asignar rutina
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="EditAssignedRoutine" asp-controller="Routine" asp-route-customerId="@s.customer.Id"
                                       class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded-md text-sm font-[Poppins] shadow transition duration-300">
                                        ✏️ Editar rutina
                                    </a>
                                }

                                <form asp-action="RemoveStudent" method="post" class="inline">
                                    <input type="hidden" name="customerId" value="@s.customer.Id" />
                                    <button type="submit"
                                            class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded-md text-sm font-[Poppins] shadow transition duration-300">
                                        ❌ Dejar de asesorar
                                    </button>
                                </form>

                                <a asp-action="StudentProgress" asp-controller="Coach" asp-route-customerId="@s.customer.Id"
                                   class="bg-[var(--color-primary)] hover:bg-[var(--color-primary-hover)] text-white px-3 py-1 rounded-md text-sm font-[Poppins] shadow transition duration-300">
                                    📈 Ver progreso
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-4 py-6 text-center text-[var(--color-text-secondary)]">
                            Aún no tienes alumnos asignados.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
