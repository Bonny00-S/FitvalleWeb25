@model List<(Fitvalle_25.Models.User user, Fitvalle_25.Models.Customer customer, bool hasRoutine, string avatar)>


@{
    Layout = "~/Views/Shared/_LayoutCoach.cshtml";
    ViewData["Title"] = "Mis Alumnos";
}

<div class="p-6 card-fitvalle animate__animated animate__fadeIn font-[Inter]">
    <h2 class="text-3xl font-[Poppins] font-bold mb-6 text-[var(--color-text-primary)] flex items-center gap-2">
        <i data-lucide="users" class="icon active"></i>
        Mis Alumnos
    </h2>

    @if (TempData["MessageTutor"] != null)
    {
        <div class="mb-4 bg-[var(--color-success)]/20 text-[var(--color-success)] px-4 py-2 rounded-lg border border-[var(--color-success)]/50 flex items-center gap-2 font-[Poppins]">
            <i data-lucide="check-circle" class="icon active"></i>
            @TempData["MessageTutor"]
        </div>
    }

    <div class="overflow-x-auto">
        <table class="w-full border-collapse rounded-lg overflow-hidden shadow-md">
            <thead class="bg-[var(--color-primary)] text-white font-[Poppins]">
                <tr>
                    <th class="px-4 py-3">
                        <div class="flex items-center gap-2">
                            <i data-lucide="user" class="icon"></i> Nombre
                        </div>
                    </th>
                    <th class="px-4 py-3">
                        <div class="flex items-center gap-2">
                            <i data-lucide="mail" class="icon"></i> Correo
                        </div>
                    </th>
                    <th class="px-4 py-3">
                        <div class="flex items-center gap-2">
                            <i data-lucide="ruler" class="icon"></i> Altura (cm)
                        </div>
                    </th>
                    <th class="px-4 py-3">
                        <div class="flex items-center gap-2">
                            <i data-lucide="weight" class="icon"></i> Peso (kg)
                        </div>
                    </th>
                    <th class="px-4 py-3">
                        <div class="flex items-center gap-2">
                            <i data-lucide="target" class="icon"></i> Meta (kg)
                        </div>
                    </th>
                    <th class="px-4 py-3 text-center">
                        <div class="flex items-center justify-center gap-2">
                            <i data-lucide="settings" class="icon"></i> Acciones
                        </div>
                    </th>
                </tr>
            </thead>

            <tbody class="bg-[var(--color-surface)] divide-y divide-[var(--color-primary)]/20">
                @if (Model != null && Model.Any())
                {
                    foreach (var s in Model)
                    {
                        // Si el usuario tiene avatar, lo usamos. Sino, usamos un icono por defecto.
                    

                        <tr class="hover:bg-[var(--color-primary-hover)]/30 transition duration-200">
                            <td class="px-4 py-2 font-semibold text-[var(--color-text-primary)] flex items-center gap-3">
                                <img src="@s.avatar"
                                     alt="Foto del alumno"
                                     class="w-16 h-16 rounded-full border-2 border-[var(--color-primary)] object-cover shadow-md" />



                                <span>@s.user.Name</span>
                            </td>
                            <td class="px-4 py-2 text-[var(--color-text-secondary)]">@s.user.Email</td>
                            <td class="px-4 py-2">@s.customer.Height</td>
                            <td class="px-4 py-2">@s.customer.Weight</td>
                            <td class="px-4 py-2">@s.customer.GoalWeight</td>
                            
                            <td class="px-4 py-2 text-center space-x-2 whitespace-nowrap">
                                @if (!s.hasRoutine)
                                {
                                    <a asp-action="Create" asp-controller="Routine" asp-route-customerId="@s.customer.Id"
                                       class="bg-[var(--color-success)] hover:bg-emerald-600 text-white px-3 py-1 rounded-md text-sm font-[Poppins] shadow transition duration-300 inline-flex items-center gap-1">
                                        <i data-lucide="dumbbell" class="icon"></i>
                                        Asignar rutina
                                    </a>
                                }
                                else
                                {
                                    <a asp-action="EditAssignedRoutine" asp-controller="Routine" asp-route-customerId="@s.customer.Id"
                                       class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded-md text-sm font-[Poppins] shadow transition duration-300 inline-flex items-center gap-1">
                                        <i data-lucide="pencil-line" class="icon"></i>
                                        Editar rutina
                                    </a>
                                }

                                <button type="button"
                                        onclick="openModal('@s.customer.Id')"
                                        class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded-md text-sm font-[Poppins] shadow transition duration-300 inline-flex items-center gap-1">
                                    <i data-lucide="user-x" class="icon"></i>
                                    Dejar de asesorar
                                </button>


                                <a asp-action="StudentProgress" asp-controller="Coach" asp-route-customerId="@s.customer.Id"
                                   class="bg-[var(--color-primary)] hover:bg-[var(--color-primary-hover)] text-white px-3 py-1 rounded-md text-sm font-[Poppins] shadow transition duration-300 inline-flex items-center gap-1">
                                    <i data-lucide="line-chart" class="icon"></i>
                                    Ver progreso
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-4 py-6 text-center text-[var(--color-text-secondary)] flex items-center justify-center gap-2 italic">
                            <i data-lucide="info" class="icon"></i>
                            Aún no tienes alumnos asignados.
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
<!-- Modal de confirmación -->
<!-- Modal de confirmación -->
<div id="removeModal"
     class="fixed inset-0 bg-black/70 hidden items-center justify-center z-[9999] backdrop-blur-sm transition-opacity duration-300">

    <div class="bg-[var(--color-surface)]
                border border-[var(--color-primary)]/20
                rounded-xl shadow-2xl p-6 w-full max-w-md
                animate__animated animate__zoomIn
                text-center font-[Poppins] text-[var(--color-text-primary)]">

        <h2 class="text-2xl font-bold mb-4 text-[var(--color-error)] flex items-center justify-center gap-2">
            <i data-lucide="alert-triangle" class="icon"></i>
            Confirmar acción
        </h2>

        <p class="text-[var(--color-text-secondary)] mb-6">
            ¿Estás seguro de que quieres dejar de asesorar a este alumno?
        </p>

        <form id="removeForm" method="post" action="/Coach/RemoveStudent">
            <input type="hidden" name="customerId" id="modalCustomerId" />

            <textarea name="reason" placeholder="Motivo (opcional)"
                      class="w-full border border-[var(--color-primary)]/40 bg-[var(--color-background)]
                             rounded-md p-2 mb-4 focus:border-[var(--color-primary)]
                             text-[var(--color-text-primary)] transition"></textarea>

            <div class="flex justify-between">
                <button type="button" onclick="closeModal()"
                        class="px-4 py-2 bg-[var(--color-surface-hover)]
                               border border-gray-500/30 rounded-lg
                               text-[var(--color-text-secondary)]
                               hover:bg-gray-500/20 transition">
                    Cancelar
                </button>

                <button type="submit"
                        class="px-4 py-2 bg-[var(--color-error)] text-white
                               rounded-lg hover:bg-red-700 transition">
                    Confirmar
                </button>
            </div>
        </form>
    </div>
</div>


<script>
    function openModal(customerId) {
        document.getElementById("modalCustomerId").value = customerId;
        document.getElementById("removeModal").classList.remove("hidden");
        document.getElementById("removeModal").classList.add("flex");
    }

    function closeModal() {
        document.getElementById("removeModal").classList.add("hidden");
        document.getElementById("removeModal").classList.remove("flex");
    }
</script>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}
