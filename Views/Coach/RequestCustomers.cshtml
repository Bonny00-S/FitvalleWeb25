@model List<(Fitvalle_25.Models.Request solicitud, Fitvalle_25.Models.User cliente)>

@{
    Layout = "~/Views/Shared/_LayoutCoach.cshtml";
    ViewData["Title"] = "Solicitudes de Clientes";
}

<div class="p-6 card-fitvalle animate__animated animate__fadeIn">
    <h2 class="text-3xl font-bold mb-6 text-[var(--color-text-primary)] font-[Poppins]">
        📨 Solicitudes de Clientes
    </h2>

    @if (Model != null && Model.Any())
    {
        <div class="overflow-x-auto">
            <table class="w-full border-collapse rounded-lg overflow-hidden shadow-md">
                <thead class="bg-[var(--color-primary)] text-white">
                    <tr>
                        <th class="px-4 py-3 text-left font-[Poppins]">Cliente</th>
                        <th class="px-4 py-3 text-left font-[Poppins]">Correo</th>
                        <th class="px-4 py-3 text-center font-[Poppins]">Solicitud</th>
                        <th class="px-4 py-3 text-center font-[Poppins]">Estado</th>
                    </tr>
                </thead>

                <tbody class="bg-[var(--color-surface)] divide-y divide-[var(--color-primary)]/25">
                    @foreach (var item in Model)
                    {
                        <tr class="hover:bg-[var(--color-primary-hover)]/30 transition duration-200">
                            <td class="px-4 py-2 font-semibold text-[var(--color-text-primary)]">@item.cliente.Name</td>
                            <td class="px-4 py-2 text-[var(--color-text-secondary)]">@item.cliente.Email</td>

                            <td class="px-4 py-2 text-center">
                                <a asp-action="RequestDetail"
                                   asp-controller="Coach"
                                   asp-route-id="@item.solicitud.Id"
                                   class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded-md text-sm font-[Poppins] shadow transition duration-300">
                                    🔍 Ver Solicitud
                                </a>
                            </td>

                            <td class="px-4 py-2 text-center">
                                @if (item.solicitud.State == "Pendiente")
                                {
                                    <span class="text-[var(--color-warning)] font-semibold">@item.solicitud.State</span>
                                }
                                else if (item.solicitud.State == "Aceptada")
                                {
                                    <span class="text-[var(--color-success)] font-semibold">@item.solicitud.State</span>
                                }
                                else
                                {
                                    <span class="text-[var(--color-text-secondary)]">@item.solicitud.State</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p class="text-[var(--color-text-secondary)] italic">No hay solicitudes registradas.</p>
    }
</div>
