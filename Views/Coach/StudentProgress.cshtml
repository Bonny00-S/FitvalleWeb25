@{
    Layout = "~/Views/Shared/_LayoutCoach.cshtml";
    var user = ViewBag.User as Fitvalle_25.Models.User;
    var customer = ViewBag.Customer as Fitvalle_25.Models.Customer;
    var sessions = ViewBag.Sessions as List<Fitvalle_25.Models.Exercise.Session>;
    var sessionExercises = ViewBag.SessionExercises as Dictionary<string, List<(Fitvalle_25.Models.Exercise.Exercise exercise, Fitvalle_25.Models.Exercise.SessionExercise data)>>;
}

<div class="p-6 bg-white rounded-xl shadow-md text-black animate__animated animate__fadeIn">
    <h2 class="text-2xl font-bold mb-2 text-gray-800">📈 Progreso de @user?.Name</h2>
    <p class="text-gray-500 mb-6">Peso actual: <b>@ViewBag.CurrentWeight kg</b> | Meta: <b>@ViewBag.GoalWeight kg</b></p>

    <!-- 📊 Gráfico de progreso peso/meta -->
    <div class="mb-8">
        <canvas id="weightChart" height="120"></canvas>
    </div>

    <!-- 📈 Promedio general -->
    <div class="mb-4 bg-gray-50 p-4 rounded-lg shadow">
        <p class="text-gray-700 font-semibold">
            Progreso hacia la meta:
            <span class="text-[#a10d3a]">@ViewBag.ProgressPercent%</span>
        </p>
    </div>

    <!-- 🏋️ Sesiones -->
    <h3 class="text-xl font-semibold text-[#a10d3a] mt-8 mb-3">Rutina actual</h3>

    @if (sessions != null && sessions.Any())
    {
        foreach (var s in sessions)
        {
            var list = sessionExercises.ContainsKey(s.Id)
            ? sessionExercises[s.Id]
            : new List<(Fitvalle_25.Models.Exercise.Exercise, Fitvalle_25.Models.Exercise.SessionExercise)>();

            <div class="mb-6 border rounded-lg p-4 bg-gray-50 shadow-sm">
                <h4 class="font-semibold text-lg text-[#a10d3a] mb-3">💪 Sesión</h4>

                @if (list.Any())
                {
                    <table class="w-full border-collapse text-sm">
                        <thead class="bg-[#a10d3a] text-white">
                            <tr>
                                <th class="px-2 py-1">Ejercicio</th>
                                <th class="px-2 py-1">Series</th>
                                <th class="px-2 py-1">Reps</th>
                                <th class="px-2 py-1">Peso (kg)</th>
                                <th class="px-2 py-1">Duración (s)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var e in list)
                            {
                                <tr class="border-b hover:bg-gray-100">
                                    <td class="px-2 py-1">@e.Item1.Name</td>
                                    <td class="px-2 py-1 text-center">@e.Item2.Sets</td>
                                    <td class="px-2 py-1 text-center">@e.Item2.Reps</td>
                                    <td class="px-2 py-1 text-center">@e.Item2.Weight</td>
                                    <td class="px-2 py-1 text-center">@e.Item2.Duration</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                }
                else
                {
                    <p class="text-gray-500 text-sm">No hay ejercicios en esta sesión.</p>
                }
            </div>
        }
    }
    else
    {
        <p class="text-gray-500">El alumno aún no tiene sesiones asignadas.</p>
    }

    <div class="mt-6">
        <a asp-action="MyStudents" class="bg-gray-600 hover:bg-gray-700 text-white px-4 py-2 rounded">⬅ Volver</a>
    </div>
</div>

<!-- 📊 Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('weightChart');
    const weightChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Peso Actual', 'Meta'],
            datasets: [{
                label: 'Peso (kg)',
                data: [@ViewBag.CurrentWeight, @ViewBag.GoalWeight],
                backgroundColor: ['#a10d3a', '#16a34a']
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false },
                title: { display: true, text: 'Progreso de peso' }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
