@{
    Layout = "~/Views/Shared/_LayoutCoach.cshtml";
    var user = ViewBag.User as Fitvalle_25.Models.User;
    var customer = ViewBag.Customer as Fitvalle_25.Models.Customer;
    var sessions = ViewBag.Sessions as List<Fitvalle_25.Models.Exercise.Session>;
    var sessionExercises = ViewBag.SessionExercises as Dictionary<string, List<(Fitvalle_25.Models.Exercise.Exercise exercise, Fitvalle_25.Models.Exercise.SessionExercise data)>>;
}

<div class="card-fitvalle p-8 animate__animated animate__fadeIn max-w-5xl mx-auto">
    <h2 class="text-3xl font-bold mb-3 text-center text-[var(--color-primary)] font-[Poppins]">
        📈 Progreso de @user?.Name
    </h2>
    <p class="text-[var(--color-text-secondary)] text-center mb-8">
        Peso actual: <b class="text-[var(--color-success)]">@ViewBag.CurrentWeight kg</b> |
        Meta: <b class="text-emerald-400">@ViewBag.GoalWeight kg</b>
    </p>

    <!-- 📊 Gráfico de progreso peso/meta -->
    <div class="mb-10 bg-[var(--color-surface)] p-6 rounded-lg shadow border border-[var(--color-primary)]/20">
        <canvas id="weightChart" height="130"></canvas>
    </div>

    <!-- 📈 Porcentaje general -->
    <div class="mb-6 bg-[var(--color-background)] border border-[var(--color-primary)]/30 p-4 rounded-lg shadow-sm text-center">
        <p class="font-semibold text-[var(--color-text-primary)] text-lg">
            Progreso hacia la meta:
            <span class="text-[var(--color-primary)] ml-1">@ViewBag.ProgressPercent%</span>
        </p>
    </div>

    <!-- 🏋️ Sesiones -->
    <h3 class="text-2xl font-semibold text-[var(--color-primary)] font-[Poppins] mt-10 mb-5 text-center">
        💪 Rutina actual
    </h3>

    @if (sessions != null && sessions.Any())
    {
        foreach (var s in sessions)
        {
            var list = sessionExercises.ContainsKey(s.Id)
            ? sessionExercises[s.Id]
            : new List<(Fitvalle_25.Models.Exercise.Exercise, Fitvalle_25.Models.Exercise.SessionExercise)>();

            <div class="mb-8 border border-[var(--color-primary)]/30 rounded-xl p-5 bg-[var(--color-surface)] shadow-sm">
                <h4 class="font-semibold text-xl text-[var(--color-text-primary)] mb-4">
                    🧩 Sesión
                </h4>

                @if (list.Any())
                {
                    <table class="w-full border-collapse text-sm rounded-lg overflow-hidden">
                        <thead class="bg-[var(--color-primary)] text-white font-[Poppins]">
                            <tr>
                                <th class="px-3 py-2 text-left">Ejercicio</th>
                                <th class="px-3 py-2 text-center">Series</th>
                                <th class="px-3 py-2 text-center">Reps</th>
                                <th class="px-3 py-2 text-center">Peso (kg)</th>
                                <th class="px-3 py-2 text-center">Duración (m)</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-[var(--color-primary)]/20">
                            @foreach (var e in list)
                            {
                                <tr class="hover:bg-[var(--color-primary-hover)]/30 transition">
                                    <td class="px-3 py-2 text-[var(--color-text-primary)]">@e.Item1.Name</td>
                                    <td class="px-3 py-2 text-center text-[var(--color-text-secondary)]">@e.Item2.Sets</td>
                                    <td class="px-3 py-2 text-center text-[var(--color-text-secondary)]">@e.Item2.Reps</td>
                                    <td class="px-3 py-2 text-center text-[var(--color-text-secondary)]">@e.Item2.Weight</td>
                                    <td class="px-3 py-2 text-center text-[var(--color-text-secondary)]">@e.Item2.Duration</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-[var(--color-text-secondary)] text-sm italic">
                        No hay ejercicios en esta sesión.
                    </p>
                }
            </div>
        }
    }
    else
    {
        <p class="text-[var(--color-text-secondary)] text-center italic">
            El alumno aún no tiene sesiones asignadas.
        </p>
    }

    <div class="mt-10 text-center">
        <a asp-action="MyStudents"
           class="bg-[var(--color-primary-hover)] hover:bg-[var(--color-primary)] text-white px-6 py-2 rounded-md font-[Poppins] shadow transition duration-300">
            ⬅ Volver
        </a>
    </div>
</div>


<!-- 📊 Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('weightChart');
    const weightChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Peso Actual', 'Meta'],
            datasets: [{
                label: 'Peso (kg)',
                data: [@ViewBag.CurrentWeight, @ViewBag.GoalWeight],
                backgroundColor: ['#a10d3a', '#16a34a']
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: { display: false },
                title: { display: true, text: 'Progreso de peso' }
            },
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>
