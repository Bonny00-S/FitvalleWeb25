@model Dictionary<string, Fitvalle_25.Models.User>
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "AdminUsers";
}

<div class="p-6 bg-white rounded-xl shadow-md animate__animated animate__fadeIn text-black">
    <div class="flex justify-between items-center mb-6 text-black">
        <h2 class="text-2xl font-bold text-gray-800">Usuarios</h2>
        <a asp-action="Register"
           class="bg-green-600 hover:bg-green-700 text-white font-semibold px-4 py-2 rounded-lg shadow transition duration-300 animate__animated animate__bounceIn">
            ➕ Registrar Usuario
        </a>
    </div>

    <div class="overflow-x-auto text-black">
        <table class="w-full border-collapse rounded-lg overflow-hidden shadow-md">
            <thead class="bg-[#a10d3a] text-white">
                <tr>
                    <th class="px-4 py-2 text-left">Nombre</th>
                    <th class="px-4 py-2 text-left">Email</th>
                    <th class="px-4 py-2 text-left">Rol</th>
                    <th class="px-4 py-2 text-left">Fecha Registro</th>
                    <th class="px-4 py-2 text-left">Estado</th>
                    <th class="px-4 py-2 text-center">Acciones</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200 text-black">
                @if (Model != null && Model.Any())
                {
                    foreach (var user in Model)
                    {
                        <tr class="hover:bg-gray-100 transition duration-200 animate__animated animate__fadeInUp">
                            <td class="px-4 py-2">@user.Value.Name</td>
                            <td class="px-4 py-2">@user.Value.Email</td>
                            <td class="px-4 py-2 capitalize">@user.Value.Role</td>
                            <td class="px-4 py-2">@user.Value.RegisterDate</td>
                            <td class="px-4 py-2">
                                @if (user.Value.State == 1)
                                {
                                    <span class="px-2 py-1 text-xs font-semibold text-green-800 bg-green-200 rounded-full">Activo</span>
                                }
                                else
                                {
                                    <span class="px-2 py-1 text-xs font-semibold text-red-800 bg-red-200 rounded-full">Inactivo</span>
                                }
                            </td>
                            <td class="px-4 py-2 text-center space-x-2">
                                <a asp-action="Edit" asp-route-uid="@user.Key"
                                   class="bg-blue-600 hover:bg-blue-700 text-white px-3 py-1 rounded-md text-sm shadow transition duration-300 animate__animated animate__fadeInLeft">
                                    ✏️ Editar
                                </a>

                                <!-- Botón para abrir modal -->
                                <button type="button"
                                        onclick="openDeleteModal('@user.Key')"
                                        class="bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded-md text-sm shadow transition duration-300 animate__animated animate__fadeInRight">
                                    🗑️ Eliminar
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="6" class="px-4 py-4 text-center text-gray-500 animate__animated animate__fadeIn">
                            No hay usuarios registrados.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Modal de confirmación -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden">
    <div class="bg-white rounded-xl shadow-lg p-6 w-96 animate__animated animate__fadeIn">
        <h3 class="text-lg font-bold text-gray-800 mb-4">¿Eliminar usuario?</h3>
        <p class="text-gray-600 mb-6">Esta acción no se puede deshacer.</p>

        <form id="deleteForm" method="post" asp-action="DeleteUser">
            <input type="hidden" name="uid" id="deleteUid" />

            <div class="flex justify-end space-x-3">
                <button type="button"
                        onclick="closeDeleteModal()"
                        class="px-4 py-2 bg-gray-300 hover:bg-gray-400 text-gray-800 rounded-lg shadow">
                    Cancelar
                </button>

                <button type="submit"
                        class="px-4 py-2 bg-red-600 hover:bg-red-700 text-white rounded-lg shadow">
                    Confirmar
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function openDeleteModal(uid) {
        document.getElementById('deleteUid').value = uid;
        document.getElementById('deleteModal').classList.remove('hidden');
    }

    function closeDeleteModal() {
        document.getElementById('deleteModal').classList.add('hidden');
    }
</script>
