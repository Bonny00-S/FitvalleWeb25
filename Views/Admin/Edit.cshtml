@model Fitvalle_25.Models.User
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Editar Usuario";
}

<div class="bg-white rounded-xl shadow-md p-8 max-w-lg mx-auto text-black">
    <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">Editar Usuario</h2>

    <form asp-action="Edit" method="post" class="space-y-5">
        <input type="hidden" name="uid" value="@ViewBag.Uid" />

        <!-- Email (solo lectura) -->
        <div>
            <label class="block text-gray-700 font-semibold mb-1">Correo</label>
            <div class="relative">
                <input type="email" value="@Model.Email" disabled
                       class="w-full border border-gray-300 rounded-lg px-4 py-2 pl-10 bg-gray-100 text-gray-600 cursor-not-allowed" />
                <i class="fa fa-envelope absolute left-3 top-3 text-gray-400"></i>
            </div>
        </div>

        <!-- Nombre -->
        <div>
            <label class="block text-gray-700 font-semibold mb-1">Nombre</label>
            <div class="relative">
                <input type="text" name="name" value="@Model.Name" required
                       class="w-full border border-gray-300 rounded-lg px-4 py-2 pl-10 focus:ring-2 focus:ring-[#a10d3a] focus:outline-none" />
                <i class="fa fa-user absolute left-3 top-3 text-gray-400"></i>
            </div>
        </div>

        <!-- Rol -->
        <div>
            <label class="block text-gray-700 font-semibold mb-1">Rol</label>
            <select name="role"
                    class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#a10d3a] focus:outline-none">
                <option value="admin" selected="@(Model.Role == "admin")">Admin</option>
                <option value="coach" selected="@(Model.Role == "coach")">Coach</option>
            </select>
        </div>

        <!-- Estado -->
        <div>
            <label class="block text-gray-700 font-semibold mb-1">Estado</label>
            <select name="state"
                    class="w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#a10d3a] focus:outline-none">
                <option value="1" selected="@(Model.State==1)">Activo</option>
                <option value="0" selected="@(Model.State==0)">Inactivo</option>
            </select>
        </div>

        <!-- Botones -->
        <div class="flex justify-between items-center mt-6">
            <a asp-action="ManageUsers" asp-controller="Admin"
               class="bg-gray-500 hover:bg-gray-600 text-white font-bold px-6 py-2 rounded-full transition duration-300">
                ⬅ Volver
            </a>
            <button type="submit"
                    class="bg-[#a10d3a] hover:bg-[#870a2f] text-white font-bold px-6 py-2 rounded-full transition duration-300">
                💾 Guardar
            </button>
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="bg-red-100 text-red-700 px-4 py-2 rounded-lg mb-4">
                @ViewBag.Error
            </div>
        }

    </form>
</div>
