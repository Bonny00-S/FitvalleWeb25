@model Fitvalle_25.Models.User
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
    ViewData["Title"] = "Editar Usuario";
}

<div class="card-fitvalle max-w-lg mx-auto p-10 rounded-2xl shadow-lg border border-[var(--color-primary)]/30 bg-[var(--color-surface)] text-[var(--color-text-primary)] animate__animated animate__fadeIn">

    <h2 class="text-3xl font-bold mb-6 text-center text-[var(--color-primary)] font-[Poppins]">
        ✏️ Editar Usuario
    </h2>

    <form asp-action="Edit" method="post" class="space-y-6">
        <input type="hidden" name="uid" value="@ViewBag.Uid" />

        <!-- Email -->
        <div>
            <label class="block text-[var(--color-text-secondary)] font-semibold mb-1">Correo electrónico</label>
            <div class="relative">
                <i class="fa-solid fa-envelope absolute left-3 top-3 text-gray-400"></i>
                <input type="email" value="@Model.Email" disabled
                       class="w-full bg-[var(--color-background)] border border-[var(--color-primary)]/30 rounded-lg px-4 py-2 pl-10 text-gray-400 cursor-not-allowed" />
            </div>
        </div>

        <!-- Nombre -->
        <div>
            <label class="block text-[var(--color-text-secondary)] font-semibold mb-1">Nombre completo</label>
            <div class="relative">
                <i class="fa-solid fa-user absolute left-3 top-3 text-gray-400"></i>
                <input type="text" name="name" value="@Model.Name" required
                       class="w-full bg-[var(--color-background)] border border-[var(--color-primary)]/30 rounded-lg px-4 py-2 pl-10 text-[var(--color-text-primary)] focus:ring-2 focus:ring-[var(--color-primary)] focus:outline-none transition" />
            </div>
        </div>

        <!-- Rol -->
        <div>
            <label class="block text-[var(--color-text-secondary)] font-semibold mb-1">Rol</label>
            <div class="relative">
                <i class="fa-solid fa-id-badge absolute left-3 top-3 text-gray-400"></i>
                <select name="role"
                        class="w-full bg-[var(--color-background)] border border-[var(--color-primary)]/30 rounded-lg px-4 py-2 pl-10 text-[var(--color-text-primary)] focus:ring-2 focus:ring-[var(--color-primary)] outline-none transition">
                    <option value="admin" selected="@(Model.Role == "admin")">Administrador</option>
                    <option value="coach" selected="@(Model.Role == "coach")">Coach</option>
                </select>
            </div>
        </div>

        <!-- Estado -->
        <div>
            <label class="block text-[var(--color-text-secondary)] font-semibold mb-1">Estado</label>
            <div class="relative">
                <i class="fa-solid fa-toggle-on absolute left-3 top-3 text-gray-400"></i>
                <select name="state"
                        class="w-full bg-[var(--color-background)] border border-[var(--color-primary)]/30 rounded-lg px-4 py-2 pl-10 text-[var(--color-text-primary)] focus:ring-2 focus:ring-[var(--color-primary)] outline-none transition">
                    <option value="1" selected="@(Model.State == 1)">Activo</option>
                    <option value="0" selected="@(Model.State == 0)">Inactivo</option>
                </select>
            </div>
        </div>

        <!-- Botones -->
        <div class="flex justify-between items-center pt-4">
            <a asp-action="ManageUsers" asp-controller="Admin"
               class="bg-gray-700 hover:bg-gray-600 text-white font-semibold px-6 py-2 rounded-lg shadow transition duration-300 flex items-center gap-2">
                <i class="fa-solid fa-arrow-left"></i> Volver
            </a>

            <button type="submit"
                    class="bg-[var(--color-primary)] hover:bg-[var(--color-primary-hover)] text-white font-semibold px-6 py-2 rounded-lg shadow transition duration-300 flex items-center gap-2">
                <i class="fa-solid fa-floppy-disk"></i> Guardar cambios
            </button>
        </div>

        <!-- Error -->
        @if (ViewBag.Error != null)
        {
            <div class="mt-4 bg-red-900/40 border border-red-700 text-red-300 px-4 py-2 rounded-lg text-center font-semibold">
                @ViewBag.Error
            </div>
        }
    </form>
</div>
