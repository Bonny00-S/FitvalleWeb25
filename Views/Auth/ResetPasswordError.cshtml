@{
    ViewData["Title"] = "Error al restablecer contraseña";
}

<div class="container mt-5 text-center">
    <div class="alert alert-danger p-4 shadow-sm">
        <h4 class="fw-bold mb-3">No se puede restablecer tu contraseña</h4>
        <p>@ViewBag.Error</p>
        <p>
            <a href="/Auth/ResetPassword" class="btn btn-primary mt-3">
                Solicitar un nuevo enlace
            </a>
        </p>
    </div>
</div>