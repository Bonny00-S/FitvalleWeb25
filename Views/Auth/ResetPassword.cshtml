@{
    ViewData["Title"] = "Reset Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Reset Password - FITVALLE</title>

    <!-- TailwindCSS -->
    <script src="https://cdn.tailwindcss.com"></script>

    <!-- FontAwesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
</head>
<body class="bg-gray-900 flex items-center justify-center min-h-screen">

    <div class="bg-gray-800 p-10 rounded-3xl shadow-2xl w-11/12 md:w-1/3 animate__animated animate__zoomIn">
        <h2 class="text-3xl text-white font-bold mb-6 text-center animate__animated animate__fadeInDown">
            Restablecer contraseña
        </h2>

        <!-- Aquí conectamos con el método POST del controlador -->
        <form asp-action="ResetPassword" asp-controller="Auth" method="post" class="w-full animate__animated animate__fadeInUp">
            <div class="mb-5 relative">
                <input type="email" name="email" id="email" placeholder="Correo electrónico"
                       required
                       class="w-full bg-gray-700 border-b-2 border-red-400 text-white placeholder-gray-300 focus:outline-none focus:border-red-500 py-2 pr-10 rounded-md">
                <i class="fa fa-envelope absolute right-3 top-3 text-red-400"></i>
            </div>

            <button type="submit"
                    class="w-full bg-red-400 text-black font-bold py-2 rounded-full hover:bg-red-500 transition duration-300 animate__animated animate__pulse animate__infinite">
                Enviar enlace de recuperación
            </button>

            @if (ViewBag.Message != null)
            {
                <p class="mt-4 text-green-400 text-center animate__animated animate__fadeIn">@ViewBag.Message</p>
            }

            @if (ViewBag.Error != null)
            {
                <p class="mt-4 text-red-400 text-center animate__animated animate__fadeIn">@ViewBag.Error</p>
            }

            <div class="mt-6 text-center">
                <a asp-controller="Auth" asp-action="Login"
                   class="text-red-300 hover:underline animate__animated animate__fadeInUp">
                    Volver al login
                </a>
            </div>
        </form>
    </div>

</body>
</html>
